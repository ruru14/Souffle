<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/design_default_color_primary_dark"
        android:id = "@+id/layout_toolbar_in_delete_plan">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                android:id="@+id/fab_in_delete_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#00000000"
                android:background = "#00000000"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:elevation="0dp"
                app:elevation="0dp"
                android:src="@drawable/hamburger" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/delete_plan_frame">
        <LinearLayout
            android:id ="@+id/slide_layout_in_delete_plan"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_weight="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#90000000"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFFFF"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFFFF"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:src="@drawable/seoultechlogo"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_userInfo_in_delete_plan"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_gravity="left"
                            android:textSize="22dp"
                            android:text = "***님\n***과" />
                    </LinearLayout>

                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src = "@drawable/img_back_to_main"/>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id ="@+id/btn_to_main_in_delete_plan"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="22dp"
                            android:text ="처음으로"/>
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:orientation="horizontal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_search_plan_title">
                        </ImageView>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_setting_in_delete_plan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:text = "설정"
                            android:textSize="22dp" />
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src = "@drawable/img_logout"/>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_logout_in_delete_plan"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_height="50dp"
                            android:text="로그아웃"
                            android:textSize="22dp"/>
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/img_delete_plan_title"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약 내용 삭제"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp"/>
            </LinearLayout>

            <ListView
                android:id = "@+id/listView_reservation_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:choiceMode="multipleChoice"
                android:layout_weight="1">

            </ListView>

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/btn_back_main"
                    android:text = "뒤로 가기"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>