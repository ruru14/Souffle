                android:layout_column="1"
                android:text="Room217" />
            <Button
                android:id="@+id/btn_219"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Room219" />
            <Button
                android:id="@+id/btn_221"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="Room221" />
            <Button
                android:id="@+id/btn_223"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:text="Room223" />
            <Button
                android:id="@+id/btn_225"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:text="Room225" />
        </GridLayout>
        <!--3층-->
        <GridLayout
            android:id="@+id/grid_third_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id = "@+id/btn_301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="301호"
                android:layout_row="0"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_305"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="305호"
