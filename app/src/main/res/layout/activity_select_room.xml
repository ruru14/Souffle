<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/design_default_color_primary_dark"
        android:id = "@+id/layout_toolbar_in_select_room">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                android:id="@+id/fab_in_select_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#00000000"
                android:background = "#00000000"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:elevation="0dp"
                app:elevation="0dp"
                android:src="@drawable/hamburger" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/select_room_frame">
        <LinearLayout
            android:id ="@+id/slide_layout_in_select_room"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_weight="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#90000000"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFFFF"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFFFF"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="70dp"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:padding="5dp"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/seoultechlogo"/>
                        </LinearLayout>
                        <TextView

                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_userInfo_in_select_room"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_gravity="left"
                            android:textSize="22dp"
                            android:text = "***님\n***과" />
                    </LinearLayout>

                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="55dp">
                            <ImageView
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src = "@drawable/img_back_to_main"/>
                        </LinearLayout>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id ="@+id/btn_to_main_in_select_room"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:textSize="22dp"
                            android:text ="@string/toMain"/>
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="55dp">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/img_setting">
                            </ImageView>
                        </LinearLayout>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_setting_in_select_room"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:text = "@string/setting"
                            android:textSize="22dp" />
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="55dp">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src = "@drawable/img_logout"/>
                        </LinearLayout>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_logout_in_select_room"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:text="@string/logout"
                            android:textSize="22dp"/>
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:orientation="vertical">
    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/txt_select_lectureroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/select_lectureroom" />
    <Spinner
        android:id="@+id/spinner_layer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"/>

        <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_layer_select"
        android:textSize ="20dp"
        android:text="강의실 선택" />

    <!--프레임 레이아웃 내에 각 층의 방을 선택하는 버튼 넣음-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--1층-->
        <GridLayout
            android:id="@+id/grid_first_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id="@+id/btn_109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/room_109" />
            <Button
                android:id="@+id/btn_111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/room_111" />
            <Button
                android:id="@+id/btn_113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="@string/room_113" />
            <Button
                android:id="@+id/btn_115"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/room_115" />

        </GridLayout>
        <!--2층-->
        <GridLayout
            android:id="@+id/grid_second_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id="@+id/btn_209"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/room_209" />
            <Button
                android:id="@+id/btn_211"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/room_211" />
            <Button
                android:id="@+id/btn_213"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="@string/room_213" />
            <Button
                android:id="@+id/btn_215"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/room_215" />
        </GridLayout>
        <!--3층-->
        <GridLayout
            android:id="@+id/grid_third_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id = "@+id/btn_301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_301"
                android:layout_row="0"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_305"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_305"
                android:layout_row="0"
                android:layout_column="1">
            </Button>
            <Button
                android:id = "@+id/btn_309"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_309"
                android:layout_row="0"
                android:layout_column="2">
            </Button>
        </GridLayout>

        <GridLayout
            android:id="@+id/grid_fourth_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id = "@+id/btn_401"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_401"
                android:layout_row="0"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_405"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_405"
                android:layout_row="0"
                android:layout_column="01">
            </Button>
            <Button
                android:id = "@+id/btn_409"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_409"
                android:layout_row="0"
                android:layout_column="2">
            </Button>
        </GridLayout>
        <GridLayout
            android:id="@+id/grid_fifth_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id = "@+id/btn_501"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_501"
                android:layout_row="0"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_505"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_505"
                android:layout_row="0"
                android:layout_column="1">
            </Button>
            <Button
                android:id = "@+id/btn_509"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_509"
                android:layout_row="0"
                android:layout_column="2">
            </Button>
        </GridLayout>
        <GridLayout
            android:id="@+id/grid_b1_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id = "@+id/btn_b101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_b101"
                android:layout_row="0"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_b105"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_b105"
                android:layout_row="0"
                android:layout_column="1">
            </Button>
            <Button
                android:id = "@+id/btn_b109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_b109"
                android:layout_row="0"
                android:layout_column="2">
            </Button>
        </GridLayout>
    </FrameLayout>


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_plan"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grid_second_floor"
        android:text="@string/see_floor_plan"
        android:visibility="invisible" />


    </LinearLayout>

    </FrameLayout>
</LinearLayout>