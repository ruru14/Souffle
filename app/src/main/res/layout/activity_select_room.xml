        </GridLayout>
        <GridLayout
            android:id="@+id/grid_fifth_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id = "@+id/btn_501"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="501호"
                android:layout_row="0"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_505"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="505호"
                android:layout_row="1"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_509"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="509호"
                android:layout_row="0"
                android:layout_column="1">
            </Button>
        </GridLayout>
        <GridLayout
            android:id="@+id/grid_b1_floor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:visibility="invisible">
            <Button
                android:id = "@+id/btn_b101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b101호"
                android:layout_row="0"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_b105"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b105호"
                android:layout_row="1"
                android:layout_column="0">
            </Button>
            <Button
                android:id = "@+id/btn_b109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b109호"
                android:layout_row="0"
                android:layout_column="1">
            </Button>
        </GridLayout>
    </FrameLayout>


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grid_second_floor"
        android:text="도면 보기"
        android:visibility="invisible" />


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_Return_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="메인 화면으로 돌아가기" />
    </LinearLayout>

    </FrameLayout>
</LinearLayout>