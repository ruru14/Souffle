<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/colorPrimary"
        android:id = "@+id/layout_toolbar_in_select_room">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                android:id="@+id/fab_in_select_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#000000"
                android:scaleType="fitXY"
                android:src="@drawable/hamburger" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/select_room_frame">
        <LinearLayout
            android:id ="@+id/slide_layout_in_select_room"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_weight="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#90000000"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFFFF"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFFFF"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:background="#FFFFFF"
                        android:id = "@+id/btn_userInfo_in_select_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"
                        android:text = "***님\n***과" />
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id ="@+id/btn_to_main_in_select_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text ="처음으로"/>\
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id = "@+id/btn_setting_in_select_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text = "설정"
                        android:textSize="25dp" />
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id = "@+id/btn_logout_in_select_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:textSize="25dp"/>
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:orientation="vertical">
    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="강의실 층 선택" />
    <Spinner
        android:id="@+id/spinner_layer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/btn_layer_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spinner_layer"
        android:text="선택" />
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_layer_select"
        android:textSize ="20dp"
        android:text="강의실 선택" />

    <!--프레임 레이아웃 내에 각 층의 방을 선택하는 버튼 넣음-->
