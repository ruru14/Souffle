<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/design_default_color_primary_dark"
        android:id = "@+id/layout_toolbar_floor_plan">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                android:id="@+id/fab_in_floor_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#000000"
                android:scaleType="fitXY"
                android:src="@drawable/hamburger" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/floor_plan_frame">
        <LinearLayout
            android:id ="@+id/slide_layout_in_floor_plan"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_weight="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#90000000"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFFFF"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFFFF"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seoultechlogo"/>
                        <TextView
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_userInfo_in_floor_plan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="25dp"
                            android:layout_marginBottom="10dp"
                            android:text = "***님\n***과" />
                    </LinearLayout>
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id ="@+id/btn_to_main_in_floor_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text ="처음으로"/>\
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id = "@+id/btn_setting_in_floor_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text = "설정"
                        android:textSize="25dp" />
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id = "@+id/btn_logout_in_floor_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:textSize="25dp"/>
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <TextView
        android:id="@+id/txt_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:layout_alignParentTop="true"

        android:text="강의실" />

    <ImageView
        android:id="@+id/image_floor_plan"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@+id/txt_guide"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="78dp" />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "사진을 보고 싶은 방을 선택하세요"
        android:textSize="20dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id = "@+id/grid_mirae_1st_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/btn_109_plan"
                android:text = "109호"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/btn_111_plan"
                android:text = "111호"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/btn_113_plan"
                android:text = "113호"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/btn_115_plan"
                android:text = "115호"/>
        </GridLayout>
        <GridLayout
            android:id = "@+id/grid_mirae_2nd_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/btn_209_plan"
                android:text = "209호"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/btn_211_plan"
                android:text = "211호"/>
            <Button
                android:id = "@+id/btn_213_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "213호"/>
            <Button
                android:id = "@+id/btn_215_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "215호"/>
        </GridLayout>
        <GridLayout
            android:id = "@+id/grid_mirae_3rd_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id = "@+id/btn_301_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "301호"/>
            <Button
                android:id = "@+id/btn_305_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "305호"/>
            <Button
                android:id = "@+id/btn_309_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "309호"/>
        </GridLayout>
        <GridLayout
            android:id = "@+id/grid_mirae_4th_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id = "@+id/btn_401_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "401호"/>
            <Button
                android:id = "@+id/btn_403_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "403호"/>
            <Button
                android:id = "@+id/btn_405_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "405호"/>
        </GridLayout>
        <GridLayout
            android:id = "@+id/grid_mirae_5th_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id = "@+id/btn_501_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "501호"/>
            <Button
                android:id = "@+id/btn_505_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "505호"/>
            <Button
                android:id = "@+id/btn_509_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "509호"/>
        </GridLayout>
        <GridLayout
            android:id = "@+id/grid_mirae_b1th_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id = "@+id/btn_b101_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "b101호"/>
            <Button
                android:id = "@+id/btn_b105_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "b105호"/>
            <Button
                android:id = "@+id/btn_b109_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "b109호"/>
        </GridLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignEnd="@+id/image_floor_plan"
        android:layout_below="@+id/image_floor_plan"
        android:text="뒤로가기" />
    </LinearLayout>

    </FrameLayout>
</LinearLayout>