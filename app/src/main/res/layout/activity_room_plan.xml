<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/colorPrimary"
        android:id = "@+id/layout_toolbar_in_room_plan">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                android:id="@+id/fab_in_room_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#000000"
                android:scaleType="fitXY"
                android:src="@drawable/hamburger" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/room_plan_frame">
        <LinearLayout
            android:id ="@+id/slide_layout_in_room_plan"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_weight="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#90000000"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFFFF"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFFFF"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:background="#FFFFFF"
                        android:id = "@+id/btn_userInfo_in_room_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"
                        android:text = "***님\n***과" />
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id ="@+id/btn_to_main_in_room_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text ="처음으로"/>\
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id = "@+id/btn_setting_in_room_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text = "설정"
                        android:textSize="25dp" />
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:background="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:id = "@+id/btn_logout_in_room_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:textSize="25dp"/>
                    <ImageView
                        android:background="#CC000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <TextView
        android:id = "@+id/txt_room_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" *** 호 강의실 도면"
        android:textSize="25dp"/>

    <ImageView
        android:layout_weight="1"
        android:id = "@+id/img_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/floor_mirae_1st" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로 가기"
        android:layout_gravity="right"
        android:id = "@+id/btn_back_to_room_select"/>
    </LinearLayout>
    </FrameLayout>

</LinearLayout>