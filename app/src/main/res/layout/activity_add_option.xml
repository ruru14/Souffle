<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세 정보 입력"
        android:textSize="30dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/option_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="20dp"
        android:text="학번" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_number"
            android:layout_row="0"
            android:layout_column="1"
            android:hint = "학번이 자동으로 뜨는 구역"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="이름" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_name"
            android:layout_row="1"
            android:layout_column="1"
            android:hint = "이름이 자동으로 뜨는 구역"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/option_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="전화번호" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_phone_number"
            android:layout_row="2"
            android:layout_column="1"
            android:hint = "전화번호 입력하는 구역"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/option_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="예약 시간" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_time"
            android:layout_row="3"
            android:layout_column="1"
            android:hint = "시간 입력하는 구역"
            android:enabled="false"/>
        <TextView
            android:id = "@+id/option_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint = "건물명"
            android:layout_row="4"
            android:layout_column = "0"
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id = "@+id/txt_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint = "건물명 자동입력됨"
            android:layout_row="4"
            android:layout_column = "1"
            android:enabled="false"/>
        <TextView
            android:id="@+id/option_people_nunber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="사용 인원" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_people_number"
            android:layout_row="5"
            android:layout_column="1"
            android:hint = "사용 인원 입력하는 구역"
            />
        <TextView
            android:id="@+id/option_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="강의실" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_room"
            android:layout_row="6"
            android:layout_column="1"
            android:enabled="false"
            android:hint = "예약한 강의실 자동 입력되는 구역"
            />
        <TextView
            android:id="@+id/option_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="목적" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_object"
            android:layout_row="7"
            android:layout_column="1"
            android:hint = "목적 입력하는 구역"
            />
        <TextView
            android:id="@+id/option_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="기타" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_etc"
            android:layout_row="8"
            android:layout_column="1"
            android:hint = "기타 입력하는 구역"
            />

    </GridLayout>
    <Button
        android:id="@+id/btn_back_to_time_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전 화면으로" />
    <Button
        android:id="@+id/btn_commit_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인" />


</LinearLayout>