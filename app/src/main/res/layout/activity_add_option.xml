<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/design_default_color_primary_dark"
        android:id = "@+id/layout_toolbar_in_add_option">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                android:id="@+id/fab_in_add_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#00000000"
                android:background = "#00000000"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:elevation="0dp"
                app:elevation="0dp"
                android:src="@drawable/hamburger" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/add_option_frame">
        <LinearLayout
            android:id ="@+id/slide_layout_in_add_option"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_weight="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#90000000"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFFFF"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFFFF"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="70dp"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:padding="5dp"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/seoultechlogo"/>
                        </LinearLayout>
                        <TextView

                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_userInfo_in_add_option"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_gravity="left"
                            android:textSize="22dp"
                            android:text = "***님\n***과" />
                    </LinearLayout>

                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="55dp">
                            <ImageView
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src = "@drawable/img_back_to_main"/>
                        </LinearLayout>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id ="@+id/btn_to_main_in_add_option"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:textSize="22dp"
                            android:text ="처음으로"/>
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="55dp">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/img_setting">
                            </ImageView>
                        </LinearLayout>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_setting_in_add_option"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:text = "설정"
                            android:textSize="22dp" />
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="55dp">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src = "@drawable/img_logout"/>
                        </LinearLayout>
                        <TextView
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:id = "@+id/btn_logout_in_add_option"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:text="로그아웃"
                            android:textSize="22dp"/>
                    </LinearLayout>
                    <ImageView
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <TextView
        android:id = "@+id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_details"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/option_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="20dp"
        android:text="@string/student_number" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_student_number"
            android:layout_row="0"
            android:layout_column="1"
            android:hint = "학번이 자동으로 뜨는 구역"
            android:enabled="false"
            />

        <TextView
            android:id="@+id/option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/name"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_name"
            android:layout_row="1"
            android:layout_column="1"
            android:hint = "이름이 자동으로 뜨는 구역"
            android:enabled="false"
            />

        <TextView
            android:id="@+id/option_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/phone_number"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_phone_number"
            android:layout_row="2"
            android:layout_column="1"
            android:hint = "연락처 입력하는 구역"
            android:enabled="true"
            />

        <TextView
            android:id="@+id/option_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/reserve_time"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_time"
            android:layout_row="3"
            android:layout_column="1"
            android:hint = "시간이 뜨는 구역"
            android:enabled="false"/>

        <TextView
            android:id="@+id/option_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:hint="건물명"
            android:text="@string/building_name"
            android:textSize="20dp"></TextView>
        <EditText
            android:id = "@+id/txt_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint = "건물명 자동입력됨"
            android:layout_row="4"
            android:layout_column = "1"
            android:enabled="false"/>

        <TextView
            android:id="@+id/option_people_nunber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/total_number"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_people_number"
            android:layout_row="5"
            android:layout_column="1"
            android:hint = "사용 인원 입력하는 구역"
            />

        <TextView
            android:id="@+id/option_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="@string/lecture_room"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_room"
            android:layout_row="6"
            android:layout_column="1"
            android:enabled="false"
            android:hint = "예약한 강의실 자동 입력되는 구역"
            />

        <TextView
            android:id="@+id/option_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:text="@string/purpose"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_object"
            android:layout_row="7"
            android:layout_column="1"
            android:hint = "목적 입력하는 구역"
            />

    </GridLayout>

        <Button
            android:id="@+id/btn_commit_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/ok" />
    </LinearLayout>
</FrameLayout>
</LinearLayout>