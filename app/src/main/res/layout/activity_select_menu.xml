<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id = "@+id/activity_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@color/design_default_color_primary_dark"
        android:id = "@+id/layout_toolbar_in_select_menu">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_alignParentRight="true"
                android:id="@+id/fab_in_selectMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:borderWidth="0dp"
                android:elevation="0dp"
                app:elevation="0dp"
                android:layout_margin="5dp"
                android:backgroundTint="#00000000"
                android:background = "#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/hamburger" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/select_menu_frame">
        <LinearLayout
            android:id ="@+id/slide_layout_in_select_menu"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_weight="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#90000000"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFFFF"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFFFF"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/seoultechlogo"/>
                    </LinearLayout>
                <TextView

                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                android:id = "@+id/btn_userInfo_in_selectmenu"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:textSize="22dp"
                android:text = "***님\n***과" />
                </LinearLayout>

                <ImageView
                    android:background="#e2e2e2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="55dp">
                    <ImageView
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src = "@drawable/img_back_to_main"/>
                </LinearLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:id ="@+id/btn_to_main_in_selectmenu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="22dp"
                    android:text ="처음으로"/>
                </LinearLayout>
                <ImageView
                    android:background="#e2e2e2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="55dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_setting">
                </ImageView>
                    </LinearLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:id = "@+id/btn_setting_in_selectmenu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text = "설정"
                    android:textSize="22dp" />
                </LinearLayout>
                <ImageView
                    android:background="#e2e2e2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="55dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src = "@drawable/img_logout"/>
                    </LinearLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:id = "@+id/btn_logout_in_selectmenu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="로그아웃"
                    android:textSize="22dp"/>
                </LinearLayout>
                <ImageView
                    android:background="#e2e2e2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
            </LinearLayout>

            </FrameLayout>
        </LinearLayout>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TableRow
           android:layout_weight="1"
           android:gravity="bottom">
        <LinearLayout
            android:id = "@+id/linear_plan_add"
            android:background = "@android:color/holo_orange_light"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/img_add_plan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="예약 추가"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/linear_plan_modify"
            android:background = "@android:color/holo_red_light"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/img_modify_plan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="예약 변경"
                android:textSize="20dp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:gravity="top">


        <LinearLayout
            android:id = "@+id/linear_plan_delete"
            android:background="@android:color/holo_blue_bright"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/img_delete_plan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="예약 삭제"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/linear_plan_update"
            android:background ="@android:color/holo_purple"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/img_update_plan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="예약 확인"
                android:textSize="20dp" />
        </LinearLayout>

    </TableRow>
    </TableLayout>
    </FrameLayout>
</LinearLayout>